<div class="col-xs-3"></div>
<h2>User info</h2>
<div>
    <div>
      <%= attachment_image_tag user, :profile_image, size: "100x100", class: "", fallback: "no_image.jpg" %>
    </div>
    <hr>
    <div>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </div>  
<% if user.id == current_user.id %>
  <%= link_to edit_user_path(user.id) do %>
    <span>@@@</span>
  <% end %>
<% else %>
  <%= link_to user_path(current_user.id) do %>
    <span>@@@</span>
  <% end %>
<% end %>

</div>

<div>
  <h2>New book</h2>
  <div>
    <%= form_for book, url: {controller: "books", action: "create"} do |f| %>
    <div>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, value: '' %>
    </div>
    <div>
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body, value: '' %>
    </div>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>
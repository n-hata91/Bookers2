<div class="col-xs-3"></div>
<h2>User info</h2>


<div>

    <div>
      <%= attachment_image_tag current_user, :profile_image, size: "100x100", class: "", fallback: "no_image.jpg" %>
    </div>
    <hr>
    <div>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </div>  
  <%= link_to edit_user_path(current_user.id) do %>
  <span>@@@</span>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <div>
    <%= form_for(book, url: {controller: "books", action: "create"}) do |f| %>
      <div>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
      </div>
      <div>
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body %>
      </div>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>

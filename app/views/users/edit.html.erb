<h2>User info</h2>
<%= form_for(@user) do |f| %>
<div>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :profile_image_id, "Image" %>
  <%= f.attachment_field :profile_image %>
</div>

<div>
  <%= f.label :introduction, "Introduction" %>
  <%= f.text_area :introduction, rows:'2' %>
</div>

<div>
  <%= f.submit "Update User", class:'btn btn-lg' %>
</div>
  
<% end %>
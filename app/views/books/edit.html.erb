<h1>Editing Book</h1>

<%= form_for @book do |f| %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title, value: @book.title %>

  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body, value: @book.body %>

  <%= f.submit "Update Book" %>

  <%= link_to "Show", book_path(params[:id]) %>
  |
  <%= link_to "Back", books_path %>
  
<% end %>